<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_gli_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"



    android:orientation="horizontal" >



        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/iv_grli_fightPhone"

            android:src="@drawable/icon" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:layout_weight="1.5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"

            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
               android:gravity="center_vertical"
                android:layout_weight="3"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/tv_grli_fighterOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="青格勒"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.5">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/shenglijiangbei" />

                <TextView
                    android:id="@+id/tv_grli_winHuman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="青格勒胜"
                    android:textColor="@color/main_red"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_grli_vs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vs" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_grli_fighterTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="费朗西丝"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_grli_gameRuler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中意拳王对抗赛84公斤级"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"


            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_grli_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017年1月08日    19:00开赛"
                android:textColor="@color/remind_color"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>