<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="vertical" >




    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/game_nan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="男 子"
            android:textColor="@color/main_text"
            android:textSize="14sp" />

        <Button
            android:id="@+id/game_nan_zhongliangji"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/background_select"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="~60KG"
            android:textSize="12sp" />

        <Button
            android:id="@+id/game_nan_qingliangji"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/background_select"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="61~90KG"
            android:textSize="12sp" />
        <Button
            android:id="@+id/game_nan_ciqingliangji"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/background_select"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="91KG~"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/game_saifadou_quanwang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="女子"
            android:textColor="@color/main_text"
            android:textSize="14sp" />

        <Button
            android:id="@+id/game_nv_zhongliangji"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/background_select"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="~48KG"
            android:textSize="12sp" />

        <Button
            android:id="@+id/game_nv_qingliangji"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/background_select"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="49~60KG"
            android:textSize="12sp" />

        <Button
            android:id="@+id/game_nv_ciqingliangji"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/background_select"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="61KG~"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>