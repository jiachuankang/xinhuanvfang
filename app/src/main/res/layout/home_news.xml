<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:background="#44999999"
        android:layout_width="match_parent"
        android:layout_height="0.5dp">

    </View>
<LinearLayout
    android:background="#11999999"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="40dp">
    <LinearLayout
        android:padding="8dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <TextView

            android:id="@+id/tv_toutiao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="头条资讯"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_gengduo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/xiangyou"
            android:text="更多"
            android:textSize="12sp" />
    </LinearLayout>\
    <View
        android:background="#44999999"
        android:padding="8dp"
        android:layout_width="0.5dp"
        android:layout_height="match_parent">


    </View>
    <LinearLayout
        android:padding="8dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <TextView


            android:id="@+id/tv_saishi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="赛事新闻"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_gengduo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/xiangyou"
            android:text="更多"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>
    <View
        android:background="#44999999"
        android:layout_width="match_parent"
        android:layout_height="0.5dp">

    </View>
    <ListView
        android:id="@+id/lv_xinwen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</LinearLayout>